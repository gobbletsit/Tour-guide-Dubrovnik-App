<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:ratingBarStyle">@style/Base.Widget.AppCompat.RatingBar</item>
    </style>

    <style name="TabLayout"  parent="Widget.Design.TabLayout">
        <item name="android:background">@color/tabColor</item>
        <item name="tabSelectedTextColor">#FFFFFF</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabIndicatorColor">#BBDEFB</item>

    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#BDBDBD</item>
    </style>

    <style name="TxtViewDesign" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFD24D</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ImageViewDesign" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>
